<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
	</configSections>

	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<targets>
			<target name="console" xsi:type="Console" layout="${shortdate} ${time} [${threadname}] ${level:upperCase=true} ${logger} ${message}" />
			<target name="asyncFile" xsi:type="AsyncWrapper">
				<target name="file" xsi:type="File" layout="${shortdate} ${time} [${threadname}] ${level:upperCase=true} ${logger} ${message} ${exception:format=toString,Data:maxInnerExceptionLevel=10}" fileName="\\Mac\Data\Development\KingStreetApps\Logs\sampleLog.txt" />
			</target>	
		</targets>
		<rules>
			<logger name="*" writeTo="console" minlevel="Debug" />
			<logger name="*" writeTo="asyncFile" minlevel="Debug" />
		</rules>
	</nlog>

